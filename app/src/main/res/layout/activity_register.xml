<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/register_imageview_hiasan1"
        android:layout_width="490.5dp"
        android:layout_height="228.45dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="41.5dp"
        android:layout_marginBottom="2.55dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/register_hiasan1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="754dp"
        android:layout_marginTop="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/register_bigsquare" />

    <ImageView
        android:id="@+id/home_imageview_backbutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27.45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbuttonwhite"
        android:clickable="true"
        android:onClick="pindahsplashactivity"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Register"
        android:textColor="@color/hitammuda"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="237dp"
        android:layout_height="62dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/poppins"
        android:text="Masukkan data diri Anda Sesuai dengan data Anda sebenarnya."
        android:textColor="@color/hitammuda"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_edittext_email"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="277dp"
        android:background="@drawable/edittext"
        android:hint="Email"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:textColor="#939393"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_edittext_namalengkap"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="Nama Lengkap"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:textColor="#939393"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edittext_password" />

    <EditText
        android:id="@+id/register_edittext_jeniskelamin"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="Jenis Kelamin"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:textColor="#939393"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edittext_namapanggilan" />

    <EditText
        android:id="@+id/register_edittext_notelepon"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="No. Telepon"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:textColor="#939393"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edittext_jeniskelamin" />

    <EditText
        android:id="@+id/register_edittext_namapanggilan"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="Nama Panggilan"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:textColor="#939393"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edittext_namalengkap" />

    <EditText
        android:id="@+id/register_edittext_password"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="Password"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:textColor="#939393"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edittext_email" />

    <ImageView
        android:id="@+id/register_imageview_seepassword"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toEndOf="@+id/register_edittext_password"
        app:layout_constraintTop_toBottomOf="@+id/register_edittext_email"
        app:srcCompat="@drawable/seepassword" />

    <Button
        android:id="@+id/register_button_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="113dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:text="DAFTAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edittext_notelepon"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Sudah Punya Akun?"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_button_daftar" />

    <TextView
        android:id="@+id/register_textview_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:clickable="true"
        android:fontFamily="@font/poppins_bold"
        android:onClick="pindahloginactivity"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/register_button_daftar" />
</androidx.constraintlayout.widget.ConstraintLayout>